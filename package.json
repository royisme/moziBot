{
  "name": "@royisme/mozi-bot",
  "version": "1.0.5",
  "description": "Personal AI coding agent that runs securely in containers",
  "bin": {
    "mozi": "./dist/mozi.mjs"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json",
    "!src"
  ],
  "type": "module",
  "main": "./dist/mozi.mjs",
  "module": "./dist/mozi.mjs",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm run build:all",
    "build:all": "pnpm run build:cli && pnpm run build:runtime",
    "build:cli": "pnpm tsdown src/cli/index.ts --format esm --out-dir dist --clean --no-splitting --out-extension .mjs && cp dist/index.mjs dist/mozi.mjs",
    "build:full": "pnpm run build:all && pnpm run ui:build",
    "build:full:native": "pnpm run build:all && pnpm run ui:build:native",
    "build:runtime": "pnpm tsdown src/runtime/host/main.ts --format esm --out-dir dist --no-clean --no-splitting --out-extension .mjs && cp dist/main.mjs dist/mozi-runtime.mjs",
    "changelog:draft": "bash scripts/changelog-draft.sh",
    "check": "pnpm run lint && pnpm run format",
    "dev": "tsx watch src/index.ts",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "package": "bash scripts/package.sh",
    "prepack": "pnpm run build:all",
    "release": "bash scripts/release.sh",
    "release:check": "pnpm tsx scripts/release-check.ts",
    "schema:check": "pnpm run schema:config && git diff --exit-code schema/config.schema.json",
    "schema:config": "pnpm tsx scripts/generate-config-schema.ts",
    "start": "tsx src/index.ts",
    "test": "vitest run --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "ui:build": "pnpm --dir desktop-widget build",
    "ui:build:native": "pnpm --dir desktop-widget build:native",
    "ui:build:web": "pnpm --dir desktop-widget build:web",
    "ui:dev": "pnpm --dir desktop-widget dev",
    "ui:preview": "pnpm --dir desktop-widget preview"
  },
  "dependencies": {
    "@buape/carbon": "^0.14.0",
    "@grammyjs/runner": "^2.0.3",
    "@inquirer/prompts": "^8.2.0",
    "@mariozechner/pi-agent-core": "^0.51.6",
    "@mariozechner/pi-ai": "^0.51.6",
    "@mariozechner/pi-coding-agent": "^0.51.6",
    "@mariozechner/pi-tui": "^0.51.6",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@sinclair/typebox": "^0.34.48",
    "@types/better-sqlite3": "^7.6.13",
    "ajv": "^8.17.1",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "cli-highlight": "^2.1.11",
    "commander": "^14.0.3",
    "cron-parser": "^5.5.0",
    "croner": "^10.0.1",
    "discord-api-types": "^0.38.38",
    "dotenv": "^17.2.3",
    "execa": "^9.6.1",
    "express": "^5.2.1",
    "file-type": "^21.3.0",
    "grammy": "^1.39.3",
    "jiti": "^2.6.1",
    "json5": "^2.2.3",
    "jsonc-parser": "^3.3.1",
    "jszip": "^3.10.1",
    "markdown-it": "^14.1.0",
    "node-edge-tts": "^1.2.9",
    "picocolors": "^1.1.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "sqlite-vec": "0.1.7-alpha.2",
    "tar": "7.5.7",
    "tslog": "^4.10.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@grammyjs/types": "^3.23.0",
    "@lit-labs/signals": "^0.2.0",
    "@lit/context": "^1.1.6",
    "@types/express": "^5.0.6",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.2.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "7.0.0-dev.20260204.1",
    "@vitest/coverage-v8": "^4.0.18",
    "lit": "^3.3.2",
    "ollama": "^0.6.3",
    "oxfmt": "0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.4",
    "rolldown": "1.0.0-rc.3",
    "tsdown": "^0.20.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@10.28.1"
}
